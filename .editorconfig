# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{py,pyi}]
indent_size = 4
max_line_length = 88

[*.{yml,yaml}]
indent_size = 2

[*.{json,js,ts}]
indent_size = 2

[*.{md,rst}]
trim_trailing_whitespace = false
indent_size = 2

[*.{sh,bash}]
indent_size = 2

[Makefile]
indent_style = tab

[*.{toml,cfg,ini}]
indent_size = 4

# GitHub specific files
[{.github/**/*.yml,.github/**/*.yaml}]
indent_size = 2

# Copilot specific files
[{.copilot/**/*.md}]
indent_size = 2
